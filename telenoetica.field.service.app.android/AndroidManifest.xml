            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainMenu"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".RoutineVisitActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".DieselVisitActivity"
            android:label="@string/app_name">
        </activity>
        
        <activity
            android:name=".MaintainenceVisitActivity"
            android:label="@string/app_name">
        </activity>
        
        <activity
            android:name=".CalloutVisitActivity"
            android:label="@string/app_name">
        </activity>
        
        <activity
            android:name=".ConfigureActivity"
            android:label="@string/app_name">
        </activity>
    </application>

</manifest>